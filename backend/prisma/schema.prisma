generator client {
  provider = "prisma-client-js"
  //output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           String @id @default(uuid())
  email        String @unique
  passwordHash String

  name             String?
  phone            String?
  telegramUsername String?
  avatarUrl        String?

  role      Role    @default(USER)
  isBlocked Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  ads           Ad[]
  messages      Message[]
  chatsAsAuthor Chat[]    @relation("ChatAuthor")
  chatsAsWriter Chat[]    @relation("ChatWriter")
  complaintsCreated  Complaint[] @relation("ComplaintReporter")
  complaintsAbout    Complaint[] @relation("ComplaintTargetUser")
  complaintsReviewed Complaint[] @relation("ComplaintReviewer")
  notifications      Notification[]

  notificationSettings NotificationSettings?
  refreshTokens        RefreshToken[]
}

model NotificationSettings {
  userId String @id
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  notifyWeb      Boolean @default(true)
  notifyTelegram Boolean @default(false)

  createdAt DateTime @default(now())
}

model Ad {
  id     String @id @default(uuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  type   AdType
  status AdStatus

  petName     String?
  animalType  String?
  breed       String?
  color       String?
  description String

  location Location?
  photos   AdPhoto[]
  chats    Chat[]
  complaints Complaint[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Complaint {
  id String @id @default(uuid())

  reporterId String
  reporter   User   @relation("ComplaintReporter", fields: [reporterId], references: [id], onDelete: Cascade)

  kind ComplaintKind @default(REPORT)
  targetType ComplaintTargetType

  adId String?
  ad   Ad?    @relation(fields: [adId], references: [id], onDelete: Cascade)

  targetUserId String?
  targetUser   User?   @relation("ComplaintTargetUser", fields: [targetUserId], references: [id], onDelete: Cascade)

  reason      String
  description String?

  status        ComplaintStatus @default(PENDING)
  reviewComment String?
  reviewedById  String?
  reviewedBy    User? @relation("ComplaintReviewer", fields: [reviewedById], references: [id], onDelete: SetNull)
  reviewedAt    DateTime?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([status, createdAt])
  @@index([adId])
  @@index([targetUserId])
}

model Location {
  id   String @id @default(uuid())
  adId String @unique
  ad   Ad     @relation(fields: [adId], references: [id], onDelete: Cascade)

  address   String?
  city      String?
  latitude  Float
  longitude Float
}

model AdPhoto {
  id   String @id @default(uuid())
  adId String
  ad   Ad     @relation(fields: [adId], references: [id], onDelete: Cascade)

  photoUrl  String
  createdAt DateTime @default(now())
}

model Chat {
  id   String @id @default(uuid())
  adId String
  ad   Ad     @relation(fields: [adId], references: [id], onDelete: Cascade)

  user1Id String
  user2Id String

  user1 User @relation("ChatAuthor", fields: [user1Id], references: [id], onDelete: Cascade)
  user2 User @relation("ChatWriter", fields: [user2Id], references: [id], onDelete: Cascade)

  messages Message[]

  createdAt DateTime @default(now())

  @@unique([adId, user1Id, user2Id])
}

model Message {
  id     String @id @default(uuid())
  chatId String
  chat   Chat   @relation(fields: [chatId], references: [id], onDelete: Cascade)

  senderId String
  sender   User   @relation(fields: [senderId], references: [id], onDelete: Cascade)

  content String
  isRead  Boolean @default(false)
  editedAt DateTime?

  createdAt DateTime @default(now())
}

model Notification {
  id     String @id @default(uuid())
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  type    NotificationType
  title   String
  message String
  link    String?

  isRead Boolean @default(false)

  createdAt DateTime @default(now())
  readAt    DateTime?

  @@index([userId, isRead, createdAt])
}

enum Role {
  USER
  ADMIN
}

enum AdType {
  LOST
  FOUND
}

enum AdStatus {
  PENDING
  APPROVED
  REJECTED
  ARCHIVED
}

enum ComplaintTargetType {
  AD
  USER
  NONE
}

enum ComplaintStatus {
  PENDING
  RESOLVED
  REJECTED
}

enum ComplaintKind {
  REPORT
  SUPPORT
}

enum NotificationType {
  CHAT_MESSAGE
  AD_MODERATION_SUBMITTED
  AD_APPROVED
  AD_REJECTED
  COMPLAINT_SUBMITTED
}

model RefreshToken {
  id String @id @default(uuid())

  token  String @unique
  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  expiresAt DateTime
  createdAt DateTime @default(now())
}
